{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between">
                <div class="flex space-x-7">
                    <div>
                        <a href="#" class="flex items-center py-4">
                            <span class="font-semibold text-gray-500 text-lg">Mon Projet Symfony</span>
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a href="#" class="btn-primary">Connexion</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="py-20" style="background: linear-gradient(90deg, #667eea 0%, #764ba2 100%)">
        <div class="container mx-auto px-6">
            <h2 class="text-4xl font-bold mb-2 text-white">
                Bienvenue sur mon projet Symfony !
            </h2>
            <h3 class="text-2xl mb-8 text-gray-200">
                Avec Tailwind CSS, Docker.
            </h3>
            <button class="bg-white font-bold rounded-full py-4 px-8 shadow-lg uppercase tracking-wider hover:bg-gray-200">
                Commencer
            </button>
        </div>
    </div>

    <!-- Features -->
    <div class="container mx-auto px-6 py-10">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Feature 1 -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h3 class="text-lg font-bold mb-2">Symfony 7</h3>
                <p class="text-gray-600">
                    Framework PHP moderne et performant
                </p>
            </div>
            <!-- Feature 2 -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h3 class="text-lg font-bold mb-2">Tailwind CSS</h3>
                <p class="text-gray-600">
                    Design responsive et élégant
                </p>
            </div>
            <!-- Feature 3 -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h3 class="text-lg font-bold mb-2">Docker</h3>
                <p class="text-gray-600">
                    Environnement de développement isolé
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
